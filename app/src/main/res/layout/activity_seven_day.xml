                            android:layout_width="match_parent"
                            android:layout_height="175sp"
                            android:contentDescription="@string/chickenStirFryRec"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/chickenstirfry" />

                        <TextView
                            android:id="@+id/Card21desc"
