<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawablebg"
    tools:context=".sevenDay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/drawablebgheader"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/backButSevenDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="15sp"
            app:srcCompat="@drawable/backarrow" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30sp"
            android:layout_weight="2"
            android:paddingTop="10sp"
            android:text="Seven Day Plan"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/favsButSevenDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="Favorites Button"
            android:padding="15sp"
            app:srcCompat="@android:drawable/btn_star" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:background="@drawable/drawablebg"
        android:minHeight="2000sp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="4sp"
                android:layout_marginBottom="8sp"
                android:layout_weight="0"
                app:cardBackgroundColor="#1EFFFFFF"
                app:cardCornerRadius="8sp"
                app:cardElevation="5sp"
                app:cardMaxElevation="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="100sp"
                        android:layout_height="200sp"
                        android:background="#00FFFFFF"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#DA242424"
                        android:textSize="150sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img1Favs"
                            android:layout_width="match_parent"
                            android:layout_height="175sp"
                            android:contentDescription="@string/chickenAlfredoPrimavera"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/chickenalfredoprimavera" />

                        <TextView
                            android:id="@+id/Card21desc"
                            android:layout_width="match_parent"
                            android:layout_height="25sp"
                            android:background="@color/black"
                            android:gravity="center|center_horizontal|center_vertical"
                            android:maxLines="1"
                            android:text="@string/chickenAlfredoPrimavera"
                            android:textColor="@color/white"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:layout_marginRight="4sp"
                android:layout_marginBottom="8sp"
                android:layout_weight="0"
                app:cardBackgroundColor="#1EFFFFFF"
                app:cardCornerRadius="8sp"
                app:cardElevation="5sp"
                app:cardMaxElevation="5sp">

