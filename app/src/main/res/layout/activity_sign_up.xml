<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawablebg"
    tools:context="Prototype.Design.SignUp">

    <LinearLayout
        android:id="@+id/titleBarLinearLayoutSignUp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/drawablebgheader"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/backButtonSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="15sp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/backarrow" />

        <TextView
            android:id="@+id/titleBarSignUp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2sp"
            android:layout_weight="9"
            android:bufferType="normal"
            android:fitsSystemWindows="true"
            android:gravity="center_horizontal|center_vertical"
            android:maxLines="1"
            android:paddingTop="5sp"
            android:paddingEnd="15sp"
            android:text="@string/app_name"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/infoTextLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12sp"
            android:alpha=".75"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/red"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="360sp"
            android:layout_height="5sp"
            android:layout_marginBottom="13sp"
            android:alpha=".75"
            android:background="@color/red" />

        <EditText
            android:id="@+id/signUpNickName"
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:background="@null"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Nickname"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"
            android:textColorHighlight="@color/red"
            android:textColorHint="@color/white"
            android:textColorLink="@color/red"
            android:textCursorDrawable="@color/red" />

        <EditText
            android:id="@+id/signUpEmail"
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:background="@null"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"
            android:textColorHighlight="@color/red"
            android:textColorHint="@color/white"
            android:textColorLink="@color/red"
            android:textCursorDrawable="@color/red" />


        <EditText
            android:id="@+id/signUpPassword"
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:background="@null"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Password"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"
            android:textColorHighlight="@color/red"
            android:textColorHint="@color/white"
            android:textColorLink="@color/red"
            android:textCursorDrawable="@color/red" />

        <EditText
            android:id="@+id/signUpReEnterPassword"
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:background="@null"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Re-Enter Password"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"
            android:textColorHighlight="@color/red"
            android:textColorHint="@color/white"
            android:textColorLink="@color/red"
            android:textCursorDrawable="@color/red" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/signUpButSignUp"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="50sp"
                android:layout_marginBottom="15sp"
                android:layout_weight="3"
                android:alpha=".75"
                android:background="@color/red"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
